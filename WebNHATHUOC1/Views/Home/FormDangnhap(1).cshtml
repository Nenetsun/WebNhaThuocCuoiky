@model WebNHATHUOC1.Models.NHANVIEN

@{
    ViewBag.Title = "FormDangnhap";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<h2>FormDangnhap</h2>

@using (Html.BeginForm("dangnhapNhanvien", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên tài khoản:</label>
            <div class="col-md-10">
                @Html.Editor("makh", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("makh", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mật khẩu:</label>
            <div class="col-md-10">
                @Html.Password("password", "", new { @class = "form-control" })
                @Html.ValidationMessage("password", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-offset-2 col-md-2">
                    <input type="submit" value="Đăng nhập" class="btn btn-primary" />
                </div>
                <div class="col-md-offset-2 col-md-2">
                    @Html.ActionLink("Hủy bỏ", "Index", null, new { @class = "btn btn-primary" })
                </div>
            </div>

        </div>
    </div>
}
